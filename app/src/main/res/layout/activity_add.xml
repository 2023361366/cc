<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lian.xiangmu_kuangjia.AddActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:id="@+id/textView4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码："
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/add_psw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/add_name"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/add_back"
        android:layout_alignEnd="@+id/add_back" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/add_psw"
        android:layout_above="@+id/add_sure"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确 定"
        android:id="@+id/add_sure"
        android:layout_alignTop="@+id/add_back"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取 消"
        android:id="@+id/add_back"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/add_name"
        android:layout_alignRight="@+id/add_psw"
        android:layout_alignEnd="@+id/add_psw" />

</RelativeLayout>
