<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/listview_image"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/place"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="#000"
        android:gravity="center"
        android:id="@+id/Uname"
        android:layout_toLeftOf="@+id/listview_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="#000"
        android:gravity="center"
        android:id="@+id/sportName"
        android:layout_below="@+id/Uname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/listview_image"
        android:layout_toStartOf="@+id/listview_image" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/timeEnd"
        android:textColor="#000"
        android:gravity="center"
        android:layout_below="@+id/timeBegin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/listview_image"
        android:layout_toStartOf="@+id/listview_image" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/timeBegin"
        android:textColor="#000"
        android:gravity="center"
        android:layout_below="@+id/sportName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/listview_image"
        android:layout_toStartOf="@+id/listview_image" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/place"
        android:textColor="#000"
        android:gravity="center"
        android:layout_below="@+id/timeEnd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/listview_image"
        android:layout_toStartOf="@+id/listview_image" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/num"
        android:textColor="#000"
        android:gravity="center"
        android:layout_below="@+id/listview_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/listview_image"
        android:layout_toStartOf="@+id/listview_image" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sportId"
        />
</RelativeLayout>
